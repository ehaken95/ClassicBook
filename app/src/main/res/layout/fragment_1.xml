<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4.3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_hellouser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_weight="1"
            android:paddingStart="30dp"
            android:text="@string/user_hello"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:paddingEnd="30dp"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/ic_user" />
    </LinearLayout>

    <Button
        android:id="@+id/button_staus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1.3"
        android:background="@drawable/ripple_effect_login"
        android:text="고전독서인증" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.seosj.classicbook.CustomCategory
                android:id="@+id/customcat1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:bg="@drawable/ripple_effect_categorybook1"
                app:symbol1="@string/cat_1"
                app:symbol2="@string/cat_cnt" />

            <com.seosj.classicbook.CustomCategory
                android:id="@+id/customcat2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:bg="@drawable/ripple_effect_categorybook2"
                app:symbol1="@string/cat_2"
                app:symbol2="@string/cat_cnt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.seosj.classicbook.CustomCategory
                android:id="@+id/customcat3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:bg="@drawable/ripple_effect_categorybook3"
                app:symbol1="@string/cat_3"
                app:symbol2="@string/cat_cnt" />

            <com.seosj.classicbook.CustomCategory
                android:id="@+id/customcat4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:bg="@drawable/ripple_effect_categorybook4"
                app:symbol1="@string/cat_4"
                app:symbol2="@string/cat_cnt" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/text_thisweektest"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:paddingStart="7dp"
            android:paddingTop="2dp"
            android:text="@string/home_text_thisweektest"
            android:textColor="#000000"
            android:textSize="18sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView1"
            android:elevation="5dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_all" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0" />

    </LinearLayout>
</LinearLayout>
